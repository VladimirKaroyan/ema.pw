<!DOCTYPE html>
<html lang="en">

<head>
    <%- include includes/app.scripts.ejs %>
</head>

<body>
<!-- Page Content -->
<div class="col-md-12">
    <div class="row">
        <%- include includes/header.ejs %>
        <div class="col-lg-12 main-container">
            <div class="col-md-12">
                <div class="row my-4">
                    <ul class="nav nav-tabs col-md-12" id="myTab" role="tablist" style="padding-left: 15px;">
                        <% for (let key in sortData) { %>
                            <li class="nav-item">
                                <a class="nav-link <%= (key == Object.keys(sortData)[0]) ? 'active' : '' %>"
                                   id="profile-tab"
                                   data-toggle="tab" href="#<%= key.replace(/ /g, '') %>"
                                   role="tab"><%= key %></a>
                            </li>
                        <% } %>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <% for (let key in sortData) { %>
                            <div class="tab-pane fade show <%= (key == Object.keys(sortData)[0]) ? 'active' : '' %>"
                                 id="<%= key.replace(/ /g, '') %>" role="tabpanel"
                                 aria-labelledby="home-tab">
                                <div class="products-row">
                                    <% sortData[key].forEach(function(product){ %>
                                        <div class="col-lg-4 col-md-6 col-sm-6">
                                            <div class="card h-100">
                                                <a href="#"><img class="card-img-top" src="http://placehold.it/700x400"
                                                                 alt=""></a>
                                                <div class="card-body">
                                                    <h4 class="card-title">
                                                        <a href="product/<%= product.productCode %>"><%= product.productName %></a>
                                                    </h4>
                                                    <h5><%= product.buyPrice %>$</h5>
                                                    <!--                                <p class="card-text"><%= product.productDescription %></p>-->
                                                </div>
                                            </div>
                                        </div>
                                    <% }) %>
                                </div>
                            </div>
                        <% } %>
                    </div>

                </div>
                <!-- /.row -->

            </div>
        </div>

    </div>

</div>

</body>

</html>

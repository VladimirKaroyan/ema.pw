        </button>
        <a class="navbar-brand" href="/">
            Express Shop
        </a>
        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            <div>
                <% if (!user) { %>
                    <ul class="navbar-nav px-3">
                        <li class="nav-item text-nowrap">
                            <a class="nav-link" href="/login">
                                <button class="btn btn-info">Sign In</button>
                            </a>
                        </li>
                        <li class="nav-item text-nowrap">
                            <a class="nav-link" href="/sign-up">
                                <button class="btn btn-info">Sign Up</button>
                            </a>
                        </li>
                    </ul>
                <% } else { %>
                    <div class="d-flex flex-wrap justify-content-between">
                        <!--<h4 style="color: white; padding: 5px 1rem; margin: 0; padding-left: 0;"><%= user.username %></h4>-->
                        <% if (user && user.admin !== 0) { %>
                            <a class="nav-link logined" href="/admin-panel">
                                <button class="btn btn-info">Admin Panel</button>

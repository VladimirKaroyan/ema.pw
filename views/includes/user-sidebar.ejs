<div class="border-right text-center position-relative" id="sidebar-wrapper">
    <img class="pt-5" src="/images/user-icon-big.png" alt="">
    <h4 class="user-name pt-4"><%= user.first_name + ' ' + user.last_name %></h4>
    <div class="d-flex align-items-baseline justify-content-around pb-1 border-bottom" style="font-size: 14px">
        <p class="d-flex flex-wrap">
            <span>Ваш баланс:</span>
            <span><span class="userBalance"><%= user.balance %></span> руб.</span>
        </p>
        <p>
            <a href="#" class="nav-link text-white text-decoration-none d-flex align-items-center"
               style="padding: 0!important; font-size: 14px;" data-toggle="modal" data-target="#add_balance">
                Пополнить <img class="pl-1" src="/images/wallet-icon.png" alt="">
            </a>
        </p>
    </div>
    <div class="list-group text-left pt-3">
        <div class="pt-1 pb-1">
            <a href="/myorders" class="list-group-item list-group-item-action bg-transparent border-0 text-white pr-0">
                <i class="fas fa-shopping-bag"></i> Мои заказы</a>
        </div>
        <div class="pt-1 pb-1">
            <a href="#" class="list-group-item list-group-item-action bg-transparent border-0 text-white pr-0"
               data-toggle="modal" data-target="#cart">
                <i class="fas fa-shopping-basket"></i> Корзина</a>
        </div>
        <div class="pt-1 pb-1">
            <a href="/help" class="list-group-item list-group-item-action bg-transparent border-0 text-white pr-0">
                <i class="fas fa-question-circle"></i> Помощь</a>
        </div>
        <div class="pt-1 pb-1">
            <a href="/settings" class="list-group-item list-group-item-action bg-transparent border-0 text-white pr-0">
                <i class="fas fa-cog"></i> Настройки</a>
        </div>
    </div>
    <a href="/logout" class="nav-link text-white position-absolute bottom-0"><i class="fas fa-arrow-circle-left"></i>
        Выйти</a>
    <img src="/images/bg-item-sidebar.png" class="position-absolute" alt="" style="top: 90%; right: -54px;">
</div>
<div id="add_balance" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Пополнить баланс</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body text-center w-100">
                <iframe src="https://www.free-kassa.ru/merchant/forms.php?gen_form=1&writer=seller&targets=<%= user.id %>&default-sum=200&P_PHONE=&button-text=Оплатить&hint=&encoding=UTF8&type=big&m=118524&id=767279"
                        style="width: 100%; min-height: 230px;" frameBorder="0" target="_parent"></iframe>
            </div>
        </div>
    </div>
</div>

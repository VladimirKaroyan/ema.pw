            </div>
            <div class="text-center pb-5 mb-5">
                <button class="btn btn-order mt-4 send_question">Отправить</button>
            </div>
            <div class="bottom-image text-right float-right" style="margin-top: -160px;">
                <img src="/images/help-bottom.png" class="w-75" alt="">
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('.send_question').click(function () {
            let formattedBody = $('textarea#newQuestion').val();
            let mailToLink = "mailto:info@smmlike.ru?body=" + encodeURIComponent(formattedBody);
            window.location.href = mailToLink;
        })
    })
</script>

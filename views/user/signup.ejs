<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Express Shop</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/login.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
    <style>
        button.btn.btn-primary {
            opacity: 0;
        }
    </style>
</head>
<body>
<%- include ../includes/header.ejs %>
<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header border-0">
                <% if(message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>
            </div>
            <div class="card-body pb-0">
                <h2 class="text-center text-white font-weight-bold">Регистрация</h2>
                <form action="/sign-up" method="post">
                    <div class="input-group form-group">
                        <input type="text" class="form-control" name="username" placeholder="Имя пользователя" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="email" class="form-control" name="email" placeholder="Почта" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="text" class="form-control" name="first_name" placeholder="Имя" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="text" class="form-control" name="last_name" placeholder="Фамилия" required>
                    </div>
                    <div class="input-group form-group">
                        <input type="password" class="form-control" name="password" placeholder="Пароль" required>
                    </div>
                    <div class="form-group text-center">
                        <button id="login" class="login-button text-center bg-transparent border-0" type="submit">
                            <a class="nav-link">
                                Регистрация
                            </a>
                        </button>
                    </div>
                </form>
                <img src="/images/unicorn-login.png" class="position-absolute unicorn-bottom" alt="" style="bottom: 0; right: 0; width: 20%;">
            </div>
        </div>
    </div>
</div>
</body>
</html>
